{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Client",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/Debug/Client.exe",
            "args": [
                "--server-port", "9000",
                "--fps", "30",
                "--cell-size", "50",
                "--multicast-address", "239.255.0.1",
                "--log-level", "debug",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "cmake build"
        },        
        {
            "name": "Run Server",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/Debug/Server.exe",
            "args": [
                "--port", "9000",
                "--log-level", "debug",
                "--fps", "15",
                "--grid-size", "60x30",
                "--multicast-address", "239.255.0.1"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "cmake build"
        },        
        {
            "name": "Clean",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "cmd.exe",
            "args": ["/c", "echo Cleaning build directory... Done!"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "preLaunchTask": "clean"
        }
    ]
}
